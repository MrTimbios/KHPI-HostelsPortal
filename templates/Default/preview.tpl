[short-preview]
<article class="story shortstory">
	<div class="wrp">
		<div class="head">
			<h2 class="title ultrabold"><a href="{full-link}" title="{title}">{title}</a></h2>
		</div>
		<div class="story_cont">
			<div class="text">
				{short-story}
				<div class="more"><a href="#" title="Читати детальніше: {title}" class="btn"><b class="ultrabold">Детальніше</b></a></div>
			</div>
		</div>
	</div>
</article>
[/short-preview]
[full-preview]
<article class="story shortstory">
	<div class="wrp">
		<div class="head">
			<h1 class="title h2 ultrabold">{title}</h1>
		</div>
		<div class="story_cont">
			<div class="text">
				{full-story}
				{pages}
			</div>
		</div>
	</div>
</article>
[/full-preview]
[static-preview]
<article class="block story">
	<div class="wrp">
		<div class="grid_3_4 none">
			<div class="head"><h1 class="h2 title ultrabold">{description}</h1></div>
			<div class="text clrfix">{static}</div>
			<div class="static_pages">{pages}</div>
		</div>
	</div>
</article>
{pages}
[/static-preview]